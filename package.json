{
    "name": "nestjs-backend-watec",
    "version": "0.0.1",
    "description": "",
    "author": "Cem Kanmaz",
    "private": true,
    "license": "UNLICENSED",
    "engines": {
        "node": "20.x",
        "npm": "9.x"
    },
    "scripts": {
        "json-to-prisma": "json-to-prisma-schema-convertor convert --inputPath='./prisma/schema.json' --outputPath='./prisma/schemaJSON.prisma'",
        "prisma:dev:deploy": "prisma migrate deploy",
        "db:dev:rm": "docker compose rm dev-db -s -f -v",
        "db:dev:up": "docker compose up dev-db -d",
        "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && yarn prisma:dev:deploy",
        "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy",
        "db:test:rm": "docker compose rm test-db -s -f -v",
        "db:test:up": "docker compose up test-db -d",
        "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && yarn prisma:test:deploy",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "pretest:e2e": "yarn db:test:restart",
        "test:e2e": "dotenv -e .env.test -- jest --watch --no-cache --config ./test/jest-e2e.json",
        "vercel-build": "prisma generate",
        "heroku-postbuild": "npx prisma generate && npm run build",
        "railway:docker:development": "docker build --build-arg NODE_ENV=development -t myapp:dev .",
        "railway:docker:production": "docker build --build-arg NODE_ENV=production -t myapp:prod ."
    },
    "dependencies": {
        "@nest-middlewares/cors": "^7.0.1",
        "@nestjs/axios": "^3.0.0",
        "@nestjs/cli": "^9.5.0",
        "@nestjs/common": "^10.3.0",
        "@nestjs/config": "3.1.1",
        "@nestjs/core": "^9.4.2",
        "@nestjs/jwt": "^10.0.3",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^9.4.2",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/swagger": "^6.3.0",
        "@nestjs/testing": "^8.0.0",
        "@prisma/client": "^4.16.2",
        "argon2": "^0.27.1",
        "axios": "^1.4.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "0.5.1",
        "class-validator": "^0.14.0",
        "cors": "2.8.5",
        "express": "4.18.2",
        "faker": "^5.5.3",
        "json-to-prisma-schema-convertor": "^0.1.0",
        "nestjs-soap": "^3.0.2",
        "nodemailer": "^6.9.7",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "7.2.0",
        "serverless-http": "3.2.0",
        "soap": "^1.0.0",
        "typeorm": "0.3.15",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "27.0.2",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^3.0.6",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "dotenv-cli": "^4.1.1",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^25.0.0",
        "pactum": "^3.1.3",
        "prettier": "^2.3.2",
        "prisma": "^4.16.1",
        "prisma-dbml-generator": "^0.9.1",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
